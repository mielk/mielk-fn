{
  "name": "mielk-fn",
  "version": "1.0.1",
  "description": "Set of helpful functions",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "prepublish": "npm test",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mielk/mielk-fn.git"
  },
  "author": "Tomasz Mielniczek",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mielk/mielk-fn/issues"
  },
  "homepage": "https://github.com/mielk/mielk-fn#readme",
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.21.5",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.2",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-html-reporters": "^3.1.4",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./reports/html-report",
          "filename": "report.html",
          "pageTitle": "My Project - Test Report",
          "expand": true,
          "openReport": true,
          "groupBy": [
            "describe"
          ]
        }
      ]
    ]
  }
}